<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="260dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/meIv"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:src="@mipmap/yamei"
            android:layout_centerInParent="true"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/meIv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="Ccapton"
            android:textColor="@android:color/white"
            android:textStyle="bold|italic" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/startMusicLayout"
        android:clickable="true"
        android:elevation="3dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/article_item_press"
        android:layout_width="150dp"
        android:layout_height="50dp">
        <ImageView
            android:src="@drawable/ic_library_music_black_24dp"

            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:text="音乐"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_width="60dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/startNewsLayout"
        android:clickable="true"
        android:elevation="3dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/article_item_press"
        android:layout_width="150dp"
        android:layout_height="50dp">
        <ImageView
            android:src="@drawable/ic_library_books_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:text="新闻"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_width="60dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/startBlogLayout"
        android:clickable="true"
        android:elevation="3dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/article_item_press"
        android:layout_width="150dp"
        android:layout_height="50dp">
        <ImageView
            android:src="@drawable/ic_public_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:text="Blog"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_width="60dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/startGithubLayout"
        android:clickable="true"
        android:elevation="3dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/article_item_press"
        android:layout_width="150dp"
        android:layout_height="50dp">
        <ImageView
            android:src="@mipmap/github"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:text="Github"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_width="60dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/memoryText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="当前内存状态:"
            android:textSize="12sp" />

        <online.osslab.CircleProgressBar
            circle:background_color="#FFCDD2"
            circle:background_width="5dp"
            circle:progress_color="@color/colorAccent"
            circle:progress_width="10dp"
            android:id="@+id/memoryStateBar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginRight="8dp" />
    </LinearLayout>
</LinearLayout>